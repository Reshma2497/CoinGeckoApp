<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/loginFragment">


    <fragment
        android:id="@+id/exchangeFragment"
        android:name="com.example.coingecko.ui.Exchange.ExchangeFragment"
        android:label="Exchange"
        tools:layout="@layout/fragment_exchange" >
        <action
            android:id="@+id/action_exchangeFragment_to_exchangeDetailFragment"
            app:destination="@id/exchangeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.example.coingecko.ui.categories.CategoriesFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_categories" />
    <fragment
        android:id="@+id/exchangeDetailFragment"
        android:name="com.example.coingecko.ui.Exchange.exchangedetail.ExchangeDetailFragment"
        android:label="Exchanges"
        tools:layout="@layout/fragment_exchange_detail" />
    <fragment
        android:id="@+id/coinsFragment"
        android:name="com.example.coingecko.ui.coins.CoinsFragment"
        android:label="Coins"
        tools:layout="@layout/fragment_coins" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.coingecko.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_coinsFragment"
            app:destination="@id/coinsFragment" />
    </fragment>

</navigation>